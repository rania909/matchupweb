{% extends 'base.html.twig' %}

{% block title %}Matchs{% endblock %}

{% block body %}
    <h1>Matchs</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>IdMatch</th>
                <td>{{ match.idMatch }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ match.type }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ match.date ? match.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Nbjoueurs</th>
                <td>{{ match.nbjoueurs }}</td>
            </tr>
            <tr>
                <th>NomTournoi</th>
                <td>{{ match.nomTournoi }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('matchs_index') }}">back to list</a>

    <a href="{{ path('matchs_edit', {'idMatch': match.idMatch}) }}">edit</a>

    {{ include('matchs/_delete_form.html.twig') }}
{% endblock %}
