{% extends 'base.html.twig' %}

{% block title %}Terrain index{% endblock %}

{% block body %}
    <h1>Terrain index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdTerrain</th>
                <th>NomTerrain</th>
                <th>Emplacement</th>
                <th>Type</th>
                <th>Etat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for terrain in terrains %}
            <tr>
                <td>{{ terrain.idTerrain }}</td>
                <td>{{ terrain.nomTerrain }}</td>
                <td>{{ terrain.emplacement }}</td>
                <td>{{ terrain.type }}</td>
                <td>{{ terrain.etat }}</td>
                <td>
                    <a href="{{ path('terrain_show', {'idTerrain': terrain.idTerrain}) }}">show</a>
                    <a href="{{ path('terrain_edit', {'idTerrain': terrain.idTerrain}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('terrain_new') }}">Create new</a>
{% endblock %}
