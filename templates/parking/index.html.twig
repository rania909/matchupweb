{% extends 'base.html.twig' %}

{% block title %}Parking index{% endblock %}

{% block body %}
    <h1>Parking index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdParking</th>
                <th>Adresse</th>
                <th>Nbdeplace</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for parking in parkings %}
            <tr>
                <td>{{ parking.idParking }}</td>
                <td>{{ parking.adresse }}</td>
                <td>{{ parking.nbdeplace }}</td>
                <td>
                    <a href="{{ path('parking_show', {'idParking': parking.idParking}) }}">show</a>
