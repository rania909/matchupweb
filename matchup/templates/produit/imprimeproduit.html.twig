{% block body %}


    <h1 align="center"  width="100%" style="color: #023163">Liste des Tournois</h1> <hr>







    <table class="table table-striped table-bordered" border="2"  >
        <thead>


        <tr>

            <th class="wd-15p" style="color: #135fb0">ID</th>
            <th class="wd-15p" style="color: #135fb0">Nom</th>
            <th class="wd-15p" style="color: #135fb0">Prix</th>
            <th class="wd-15p" style="color: #135fb0">Quantité Totale </th>
            <th class="wd-15p" style="color: #135fb0">Quantité restante </th>
            <th class="wd-15p" style="color: #135fb0">Description</th>
        </tr>
        </thead>

        <tbody>
        {% for produit in produits  %}

            <tr>
                <td >{{ produit.idProduit }}</td>
                <td >{{ produit.nomProduit }}</td>
                <td >{{ produit.prix }}</td>
                <td>{{ produit.quantiteTotal }}</td>
                <td >{{ produit.quantiteRestant }}</td>
                <td>{{ produit.description }}</td>
            </tr>

        {% endfor %}
        </tbody>


    </table>
{% endblock %}