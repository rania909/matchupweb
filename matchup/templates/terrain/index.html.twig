{% extends 'base3.html.twig' %}


{% block title %}Terrain index{% endblock %}

{% block main %}
<div class="main-content">
    <section class="section">



        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4>User</h4>
                        <div class="card-header-form">
                            <form>
                                <div class="input-group">

    <h4>Gestion Terrain</h4>
    <form method="POST">
        <input type="text" name="Recherche">
        <button type="submit" class="form-control">Recherche</button>
    </form>
    <table class="table">
        <th><a class="btn-primary" href="/terrain/tri"> Tri par emplacement</a> </th>
        <thead>
        <tr>
            <th>IdTerrain</th>
            <th>NomTerrain</th>
            <th>Emplacement</th>
            <th>Type</th>
            <th>Etat</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for terrain in terrains %}
            <tr>
                <td>{{ terrain.idTerrain }}</td>
                <td>{{ terrain.nomTerrain }}</td>
                <td>{{ terrain.emplacement }}</td>
                <td>{{ terrain.type }}</td>
                <td>{{ terrain.etat }}</td>
                <td>
                    <a href="{{ path('terrain_show', {'idTerrain': terrain.idTerrain}) }}"class="btn-outline-info">Show</a>
                    <a href="{{ path('terrain_edit', {'idTerrain': terrain.idTerrain}) }}"class="btn-outline-info">Edit</a>


                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
        <tbody id="search">
        </tbody>
    </table>



    <a href="{{ path('terrain_new') }}"class="btn-outline-info">Create new</a>
    <a href="/terrain/stat"class="btn-outline-info">Stat</a>
    <div class="navigation">
        {{ knp_pagination_render(terrains) }}
    </div>

                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

{% endblock %}





