{% extends 'base2.html.twig' %}



 {% block section1 %}
     <div id="wrapper">


         <!--header end-->

         <!--product-info-->
         <div class="free-shipping-a cart ptb-90">
             <div class="container-fluid">
                 <div class="row justify-contect-center">


                     <div class="col-lg-4 col-md-6 col-sm-6">

                     </div>
                 </div>
             </div>
         </div>
         <!---free shipping-a-->
         <section class="cart-block wfp">
             <div class="container">
                 <div class="row">
                     <div class="col-lg-12">
                         <div class="table-responsive wfp">
                             {% for message in app.flashes('info')  %}
                                 <div class="alert-success" role="alert">
                                     {{ message }}</div>
                             {% endfor%}
                             {% if items | length >0 %}
                             <table class="table table-bordered table-hover">
                                 <thead>
                                 <tr>
                                     <th class="t-product">nomProduit </th>
                                     <th class="t-price">prix</th>
                                     <th class="t-price">Delete</th>

                                 </tr>
                                 </thead>
                                 <tbody>
                                 {% for item in items%}
                                     <tr>


                                         {# ------------- #}


                                         {# ------------- #}
                                         <td class="t-product">{{ item.produit.nomProduit }}</td>
                                         {# ------------- #}

                                         {# ------------- #}
                                         <td class="t-product">{{ item.produit.prix}}</td>
                                         {# ------------- #}
                                        <td> <a href="{{ path('cart_remove',{'idProduit':item.produit.idProduit}) }}" class="badge badge-danger ">Delete

                                                 <i class="fas fa-trash"></i>
                                             </a>
                                         </td>
                                     </tr>


                                 {% endfor %}
                                 </tbody>

                                 <tr>
                                     <td  class="t-total">Total </td>
                                     <td class="t-total" style="color: dodgerblue">{{ total }} </td>

                                 </tr>

                             </table>
                             {% else %}
                                 <p>Surprise ,c'est vide</p>
                             {% endif %}
                         </div>
                     </div>
                 </div>
             </div>
         </section>
     </div>
 {% endblock %}